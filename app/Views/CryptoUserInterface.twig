<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Crypto Current Value</title>
    </head>
    <body>
        <table style="width:30%" align="center" border="2px solid black" bgcolor="#faebd7" >
            <tr align="left" style="font-size:40px">
                <th>Name</th>
                <th>Symbol</th>
                <th>Price in EUR</th>
            </tr>
            {% for asset in assets %}
            <tr>
                <td>{{ asset.name }}</td>
                <td >{{ asset.symbol }}</td>
                <td>{{ asset.price }}</td>
            </tr>
            {% endfor %}
        </table>
    </body>
</html>